<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        body {
            padding-top: 70px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar bg-white navbar-expand-md fixed-top shadow-sm border-bottom">
        <div class="container">
            <span class="navbar-brand">MVC<sup>5</sup></span>
            <div class="navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a href="@Url.Action("Index", "DieHard")" class="nav-link"><i class="bi bi-dice-6-fill"></i> Die Hard</a></li>
                    <li class="nav-item">@Html.ActionLink("Customers", "Index", "Customers", new { }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container" style="min-height:calc(100vh - 110px)">
        @RenderBody()
    </main>
    <footer class="container">
        <p>@DateTime.Today.ToString("MMM dd, yyyy")</p>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>